<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/recycler_bg"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_height"
    android:background="@drawable/fillet_model"
    android:layout_margin="@dimen/title_margin"
    android:orientation="horizontal"
    android:id="@+id/home_search"
    android:gravity="center_vertical"
    >

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_height"
        android:text="@string/home_search"
        android:gravity="center"
        android:textSize="@dimen/movie_name_size"
        android:textColor="@color/black"
        />
    <ImageView
        android:layout_weight="1"
        android:layout_width="@dimen/home_search_width"
        android:layout_height="@dimen/home_search_heignt"
        android:background="@drawable/search"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/title_margin"
        />

</LinearLayout>

    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner"
        android:layout_margin="@dimen/margin"
        />
</LinearLayout>
