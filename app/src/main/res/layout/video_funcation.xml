<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.example.simpletv.Tools.MarqueeTextView
        android:id="@+id/marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/hint_txt"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="@dimen/margin"
        android:singleLine="true"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/video_nav_Function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:itemBackground="@null"
        app:itemIconTint="@color/mine_button"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@color/mine_nav_selector"
        app:menu="@menu/video_funcation"
        />
</LinearLayout>
