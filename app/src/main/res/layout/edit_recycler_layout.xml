<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:background="@color/recycler_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="@dimen/title_margin"
        android:layout_margin="@dimen/title_margin"
        android:id="@+id/item_click"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/set_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/edit_list_texttitle_size"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/context_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_toStartOf="@+id/set_item_img"
            android:layout_toLeftOf="@+id/set_item_img"
            android:layout_toEndOf="@+id/set_item_text"
            android:layout_toRightOf="@+id/set_item_text"
            android:textColor="@color/black"
            android:maxEms="14"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/set_item_img"
            android:layout_width="@dimen/title_img_width_height"
            android:layout_height="@dimen/title_img_width_height"
            android:background="@drawable/open"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>